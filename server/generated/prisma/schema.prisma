generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CardsCafe {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  address     String
  imageUrl    String?
  rating      String  @default("Нет")
  favourites  Boolean @default(false)
  locationLat Int     @default(0) @map("location_lat")
  locationLng Int     @default(0) @map("location_lng")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("card_cafe")
}

model User {
  id          String  @id @default(uuid())
  email       String
  password    String
  adress      String? @default("")
  phone       String? @default("")
  name        String  @default("")
  surname     String  @default("")
  login       String  @default("")
  description String? @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Message {
  id      Int    @id @default(autoincrement())
  userId  String
  cafeId  Int
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("message")
}
